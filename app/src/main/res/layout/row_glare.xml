<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/glare_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"
        android:src="@drawable/glare" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/glare_name"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:text="Royce Raju"
        android:layout_toRightOf="@+id/glare_image"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/glare_number"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:text="+91-9972922892"
        android:layout_toRightOf="@+id/glare_image"
        android:layout_below="@+id/glare_name"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/glare_info"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:text="Danger man spotted"
        android:layout_toRightOf="@+id/glare_image"
        android:layout_below="@+id/glare_number"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/glare_location"
        android:textSize="18sp"
        android:paddingLeft="16dp"
        android:text="View Location"
        android:layout_toRightOf="@+id/glare_image"
        android:layout_below="@+id/glare_info"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/glare_nearby_drivers"
        android:textSize="18sp"
        android:paddingLeft="16dp"
        android:text="View Nearby Drivers"
        android:layout_toRightOf="@+id/glare_image"
        android:layout_below="@+id/glare_location"
        android:layout_height="wrap_content" />
<!--
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/glare_status"
        android:textSize="18sp"
        android:paddingLeft="16dp"
        android:text="Status : PENDING"
        android:layout_toRightOf="@+id/glare_image"
        android:layout_below="@+id/glare_nearby_drivers"
        android:layout_height="wrap_content" />-->

</RelativeLayout>