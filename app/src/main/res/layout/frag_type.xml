<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="32dp"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/label"
        android:text="When in an emergency , don't just blink , start glaring!"
        android:layout_margin="32dp"
        android:gravity="center"
        android:layout_below="@+id/icon"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Join as an user"
        android:layout_below="@+id/label"
        android:textSize="32sp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_person"
        android:id="@+id/type_user"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Join as a driver"
        android:textSize="32sp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_person"
        android:layout_below="@+id/type_user"
        android:id="@+id/type_driver"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Join as an admin"
        android:textSize="32sp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_person"
        android:layout_below="@+id/type_driver"
        android:id="@+id/type_admin"
        android:layout_height="wrap_content" />
</RelativeLayout>